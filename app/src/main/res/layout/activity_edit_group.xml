<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmsc355.contactapp.EditGroupActivity"
    android:id="@+id/edit_group_activity">

    <include layout="@layout/toolbar_default"
        android:id="@+id/edit_group_toolbar" />

    <Button
        android:id="@+id/edit_group_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/edit_group_submit" />

    <EditText
        android:id="@+id/edit_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_group_toolbar"
        android:hint="@string/edit_group_name" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/edit_group_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_group_name"
        android:layout_above="@id/edit_group_submit" />

</RelativeLayout>
